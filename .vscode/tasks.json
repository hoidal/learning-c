{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "build hello world",
      "command": "gcc",
      "args": ["-g", "-o", "helloworld", "helloworld.c"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
